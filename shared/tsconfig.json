{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": "..",
    "lib": ["esnext"],
    "types": ["node"],
    "paths": {
      // Internal shared paths (relative to root)
      "@/*": ["./shared/*"],
      "@shared/*": ["./shared/*"],
      "@shared/const": ["./shared/const.ts"],
      "@shared/types": ["./shared/types.ts"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../drizzle/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
