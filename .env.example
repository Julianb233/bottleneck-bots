# Application Configuration
VITE_APP_ID=your-app-id
VITE_APP_TITLE=Bottleneck Bots
VITE_APP_LOGO=/logo.png

# Authentication
JWT_SECRET=your-jwt-secret-key-here

# Database (Supabase PostgreSQL)
# Connection string format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
# Use port 6543 for transaction mode (recommended for serverless) or 5432 for session mode
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Supabase Configuration
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis Cache (for distributed rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=bb:

# OAuth Configuration (Manus OAuth - optional if using Google OAuth)
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://auth.manus.im
OWNER_OPEN_ID=your-owner-open-id

# Forge API (if using)
BUILT_IN_FORGE_API_URL=your-forge-api-url
BUILT_IN_FORGE_API_KEY=your-forge-api-key

# Analytics (optional)
VITE_ANALYTICS_ENDPOINT=your-analytics-endpoint
VITE_ANALYTICS_WEBSITE_ID=your-analytics-website-id

# Server Configuration
PORT=3000
NODE_ENV=production

# AI Model API Keys
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Browser Automation
BROWSERBASE_API_KEY=
BROWSERBASE_PROJECT_ID=
# Browserbase region (default: us-west-2)
BROWSERBASE_REGION=us-west-2

# Stagehand AI Model Configuration
# Options: google/gemini-2.0-flash, openai/gpt-4o, anthropic/claude-3-sonnet
STAGEHAND_MODEL=google/gemini-2.0-flash
# Alternative: use AI_MODEL as fallback
AI_MODEL=google/gemini-2.0-flash

# Set to 1 to skip downloading browsers (required for Vercel)
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1

# GoHighLevel API Configuration (for ghl_action tasks)
GHL_API_KEY=your-gohighlevel-api-key
GHL_SECRET_KEY=your-gohighlevel-secret-key
GHL_LOCATION_ID=your-default-location-id

# Session cleanup interval in milliseconds (default: 5 minutes)
SESSION_CLEANUP_INTERVAL=300000

# AWS S3 Storage Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# CloudFront CDN Configuration (optional)
CDN_ENABLED=false
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
CLOUDFRONT_DOMAIN=your-distribution.cloudfront.net
# For signed URLs (private content)
CLOUDFRONT_KEY_PAIR_ID=your-key-pair-id
# Note: For CLOUDFRONT_PRIVATE_KEY, use \n for newlines or store in a file
CLOUDFRONT_PRIVATE_KEY=

# Stripe Payment Integration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Application URL for Stripe redirects
APP_URL=http://localhost:3000

# Meta Ads Integration
# Get your app credentials from: https://developers.facebook.com/apps
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
# OAuth redirect URI (must match your app settings)
META_REDIRECT_URI=http://localhost:3000/oauth/meta/callback

# Email Integration (Gmail OAuth - for email automation, separate from Google Sign-in)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:3000/api/auth/oauth/gmail/callback

# Email Integration (Outlook OAuth)
# Get credentials from: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
OUTLOOK_CLIENT_ID=your_outlook_client_id_here
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret_here
OUTLOOK_REDIRECT_URI=http://localhost:3000/api/auth/oauth/outlook/callback

# Facebook Integration (for social media automation)
# Get credentials from: https://developers.facebook.com/apps
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/auth/oauth/facebook/callback

# Instagram Integration (for social media automation)
# Uses Facebook App credentials
INSTAGRAM_CLIENT_ID=your_instagram_app_id_here
INSTAGRAM_CLIENT_SECRET=your_instagram_app_secret_here
INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/auth/oauth/instagram/callback

# LinkedIn Integration (for social media automation)
# Get credentials from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/auth/oauth/linkedin/callback

# Encryption Key for OAuth Tokens
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Google OAuth Configuration (User Sign-in/Authentication)
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Note: This is for user authentication (signing into the app)
# For Gmail automation, use GMAIL_CLIENT_ID/SECRET above
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# Development: http://localhost:3000/api/oauth/google/callback
# Production: https://your-domain.com/api/oauth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback

# Sentry Error Tracking (PRODUCTION MONITORING)
# Get your DSN from: https://sentry.io/settings/[org]/projects/[project]/keys/
SENTRY_DSN=your_sentry_dsn_here

# For client-side tracking (REQUIRED)
VITE_SENTRY_DSN=your_sentry_dsn_here

# For source maps upload (OPTIONAL but recommended)
SENTRY_AUTH_TOKEN=sntrys_your_auth_token_here
SENTRY_ORG=your-sentry-organization-name
SENTRY_PROJECT=bottleneck-bots

# See docs/monitoring/SENTRY_SETUP.md for full configuration guide

# Email Configuration
# Resend API (preferred method)
RESEND_API_KEY=your-resend-api-key

# SMTP Configuration (fallback if Resend not available)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# Email Addresses
SUPPORT_EMAIL=support@bottleneckbot.com
ADMIN_NOTIFICATION_EMAIL=admin@bottleneckbot.com

# Slack Notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_DEFAULT_CHANNEL=#support-tickets
